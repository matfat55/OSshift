{
	"name": "osshift",
	"version": "0.1.0",
	"description": "A lightweight desktop AI assistant with global hotkey access",
	"main": "dist/main/main.js",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "pnpm biome lint .",
		"preview": "vite preview",
		"start": "electron .",
		"package": "electron-builder build --win --publish never",
		"make": "npm run build && npm run package",
		"format": "pnpm biome format . --write",
		"check": "pnpm biome check ."
	},
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/electron-squirrel-startup": "^1.0.2",
		"@types/node": "^20.11.19",
		"@types/react": "^18.2.55",
		"@types/react-dom": "^18.2.19",
		"@types/uuid": "^10.0.0",
		"@vitejs/plugin-react": "^4.2.1",
		"electron": "^28.1.0",
		"electron-builder": "^24.9.1",
		"typescript": "^5.2.2",
		"vite": "^5.1.0",
		"vite-plugin-electron": "^0.15.5",
		"vite-plugin-electron-renderer": "^0.14.5"
	},
	"dependencies": {
		"electron-squirrel-startup": "^1.0.1",
		"electron-store": "^8.1.0",
		"iohook": "^0.9.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"styled-components": "^6.1.8",
		"uuid": "^11.1.0"
	},
	"build": {
		"appId": "com.osshift.app",
		"productName": "OSshift",
		"files": ["dist/**/*", "node_modules/**/*"],
		"directories": {
			"buildResources": "assets",
			"output": "release"
		},
		"win": {
			"target": ["nsis"]
		}
	},
	"pnpm": {
		"onlyBuiltDependencies": ["@biomejs/biome", "electron", "esbuild", "iohook"],
		"ignoredBuiltDependencies": ["electron", "esbuild", "iohook"]
	}
}
